<h1>Your products</h1>
<div class="container d-flex justify-content-center" style="width: 90vw;">
  <div>
    <% @products.each do |product|%>
      <div class = "card d-flex" style="width: 90vw;">
        <div><img src=# /></div>
        <div>
          <h4><%= product.name  %></h4>
          <p><i class="fa-solid fa-star"></i>Brand: <%= product.brand%></p>
          <p><i class="fa-solid fa-circle-question"></i> Category :<%= product.category %></p>
          <p><i class="fa-solid fa-tag"></i>Price: Â£<%= product.price.round%></p>
        <div>
        <div>
          <%= link_to "See item!", business_product_path(@business, product), class:"btn btn-dark"%>
        </div>
      </div>
    <%end%>
  </div>
</div>
