<div class="container">
  <h1>Edit <%= @product.name%></h1>
  <%= simple_form_for([@business, @product]) do |f| %>
        <%= f.input :name %>
        <%= f.input :price, as: :float %>
        <%= f.input :category %>
        <%= f.input :brand %>
        <%= f.input :description %>
        <%= f.input :availability %>
        <%= f.submit class: "btn btn-dark" %>
      <% end %>
</div>
