<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="user-image-button-container col-10 mt-5 mb-5">
      <div class="user-show-container ">

        <div class="user-show-image-container">
          <% if @user.avatar.attached? %>
            <%= cl_image_tag @user.avatar.key, crop: :fill, class:"show-image round" %>
          <% else %>
            <img class="round show-image" style=""src="https://pcafalcons.com/wp-content/uploads/2019/08/no-profile-picture-icon-female-0-e1564976045606.jpg" alt="">
          <% end %>
        </div>
        <hr>
        <div>

          <div>
            <div class="d-flex">
              <p>Name : </p><h4 class="ms-2"><%= @user.first_name %></h4>
              <h4 class="ms-1"><%= @user.last_name %></h4>
            </div>
          </div>

          <div>
            <div class="d-flex">
              <p class="me-1">Account created :</p><%= current_user.created_at.strftime("%a %b %e") %>
            </div>
          </div>

          <div>
            <div class="d-flex">
              <p class="me-1"> Status :</p>
              <p>Seeker</p>
              <% if current_user.businesses.present? %>
                <p class="ms-1"> & Owner</p>
              <% end %>
            </div>
          </div>

          <% if current_user == @user %>
            <div class="d-flex">
              <p class="me-1"> email :</p>
              <%= current_user.email %>
            </div>
          <% end %>

          <%= link_to "Edit my account", edit_user_registration_path, class:"btn btn-light mt-2 mb-2"   %>
        </div>

      </div>
    </div>
  </div>
</div>
