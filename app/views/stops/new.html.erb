 <div class="container">
  <h1>Add a stop into your itinerary</h1>
  <div class="container card border p-3 w-100">
    <%= simple_form_for([@itinerary, @stop]) do |f|%>
    <%= f.input :address,
                input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
    <%= f.input :name %>
    <%= f.submit "Add stop", class: "btn btn-primary"%>
    <% end %>
  </div>
 </div>
