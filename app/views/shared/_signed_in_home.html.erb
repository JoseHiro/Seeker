
<div class="d-flex mb-4" style="" >
  <div class="user-signed-in-sidebar" style="">

    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, height: 150, width: 150, crop: :fill, class:"mt-4 round" %>
    <% else %>
      <img class="mt-4 round" style="height: 100px; width: 100px;" src="https://pcafalcons.com/wp-content/uploads/2019/08/no-profile-picture-icon-female-0-e1564976045606.jpg" alt="">
    <% end %>
    <br>


    <div class="mt-4 ms-4" style="text-align: left">
      <%# <%= link_to "My itineraries",  my_itinerary_path, class:"mt-1 slide-bar-links dropdown-item" %>
      <%= link_to "My account", user_path(current_user), class:"mt-2 slide-bar-links dropdown-item" %>
      <% if current_user.businesses.present? %>
        <%= link_to "My businesses", businesses_path, class:"mt-2 slide-bar-links dropdown-item" %>
        <%= link_to "New business", new_business_path, class:"mt-2 slide-bar-links dropdown-item"%>
      <% else %>
        <%= link_to "New business",new_business_path, class:"mt-2  slide-bar-links dropdown-item" %>
      <% end %>
      <%= link_to "Edit account", edit_user_registration_path(current_user), class: "mt-2 slide-bar-links dropdown-item" %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "mt-2 slide-bar-logout slide-bar-links dropdown-item" %>

    </div>
  </div>

  <%# right side conatainer %>
  <%# dashbored 1 %>
  <div class="sign-in-right-container" style="">

    <%# search engine %>
    <div style="" class="blue" id="sign-in-search-engine">
      <%= simple_form_for :filters, url: new_itinerary_path, method: :get do |f| %>
        <%= f.input :seek, placeholder: 'Categories, product name..', label: false,  class:"seek-search" %>
        <div class="nav-search" style="border-radius: 15px" >
          <%= f.input :address, label: false, input_html: {data: {address_autocomplete_target: "address"}, class: "mapboxgl-ctrl-geocoder--input d-none"}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
          <%= button_tag type: 'submit', class:"signed-in-search-glass-container btn" do %>
            <i class="fa-solid signed-in-search-glass fa-magnifying-glass"></i>
          <% end %>
        </div>
      <% end %>
    </div>


   <div style="width:100%;">
   <%# #f6db04 #f6ff58 %>
    <div class="mt-3 corner dashbored-name-address" style="box-shadow: 0 0 15px rgba(0,0,0,0.2); margin: 0 auto; width:80%; background-color:#333">
      <div class="location-detail">
          <h2 class="dashbored-name mt-3 ms-2"><%= "Hi, #{current_user.first_name}" %></h2>
          <% if current_user.location.presence == nil %>
            <p>
              <a class="current-location-btn btn btn-light" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                Set location
              </a>
            </p>
          <% else %>
            <div class="mt-3 ms-2 d-flex">
              <p><i class="home-current-location-pin me-2 fa-solid fa-location-pin"></i></p>
              <p class="home-current-location"><%= current_user.location.address %></p>
            </div>
            <p>
              <a class="current-location-btn btn btn-light" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
              Change
              </a>
            </p>
          <% end %>
      </div>

      <%= render "shared/current_address_setting" %>
      <hr>

      <div class="dashbrod-detail d-flex justify-content-around">
        <div>
          <h3>3<i style="color:#FFF2BF" class="ms-1 fa-solid fa-cart-shopping"></i></h3>
          <p>3 items </p>
        </div>
        <div>
          <h3>2<i style="color:#FFF2BF" class="ms-1 fa-solid fa-location-dot"></i></h3>
          <p>2 stops</p>
        </div>
        <div>
          <h3>16<i style="color:#FFF2BF" class="ms-1 fa-solid fa-clock"></i></h3>
          <p>16minutes</p>
        </div>
      </div>
    </div>

    <%# dashbored2 %>
    <div class="mt-2 corner shiny" style=" background-color:#333; box-shadow: 0 0 15px rgba(0,0,0,0.2); margin: 0 auto; width:80%; height:60px;">
      <div class="d-flex justify-content-around">
        <h3 style="color:white" class="mt-3">My itinerary</h3>
        <%= link_to "View",  my_itinerary_path, class:"btn btn-light mt-2 mb-2" %>
      </div>
    </div>
   </div>


    <%# category list %>
   <div style="text-align:center; background-size:cover; background-image:url('https://img.freepik.com/free-photo/full-length-portrait-excited-man_171337-2333.jpg?w=1480&t=st=1670527180~exp=1670527780~hmac=3e611183adee5f13ea9058d251f88ddaeff590430b12b5b1c17362ba4a8690dc')">
      <h3 class="mt-5" style="font-weight:bold;">Find your item</h3>
      <div style="margin-top:200px">
        <div style="text-align:center; background: #333; height: 40px; width:100%;">
          <h3 style="padding-bottom:8px; font-weight:bold; color:white">Categories</h3>
        </div>
        <%= render "shared/slide_home_link_category" %>
      </div>
   </div>
      <%= render "shared/slide_home_link_near_shops" %>
  </div>
</div>
