
<div class="d-flex">
  <div class="user-signed-in-sidebar" style="">

    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, height: 150, width: 150, crop: :fill, class:"mt-4 round" %>
    <% else %>
      <img class="mt-4 round" style="height: 100px; width: 100px;" src="https://pcafalcons.com/wp-content/uploads/2019/08/no-profile-picture-icon-female-0-e1564976045606.jpg" alt="">
    <% end %>
    <br>
    <div class="mt-3">
      <%= current_user.first_name %>
      <%= current_user.last_name %>
    </div>

    <div class="mt-4 ms-4" style="text-align: left">
      <%= link_to "My page", user_path(current_user), class:"mt-1 btn btn-light", style:"margin-left:0" %>
      <button class="mt-1 btn btn-light">Business</button>
      <button class="mt-1 btn btn-light">History</button>
    </div>
  </div>

  <%# right side conatainer %>
  <%# dashbored 1 %>
  <div class="sign-in-right-container white" style="">
   <div style="width:100%; background-color:white">
    <div class="mt-3 corner" style="box-shadow: 0 0 15px rgba(0,0,0,0.2); margin: 0 auto; width:80%; height:120px; background-color:#B0B0B0">
      <p class="mt-3 ms-2"><%= "Hi, #{current_user.first_name}" %></p>
      <hr>
      <div class="d-flex justify-content-around">
        <div>
          <h3>3<i class="fa-solid fa-cart-shopping"></i></h3>
          <p>3 items </p>
        </div>
        <div>
          <h3>2<i class="fa-solid fa-location-pin"></i></h3>
          <p>2 stops</p>
        </div>
        <div>
          <h3>16<i class="fa-light fa-timer"></i></h3>
          <p>16minutes</p>
        </div>
      </div>
    </div>

    <%# dashbored2 %>
    <div class="mt-2 corner" style="box-shadow: 0 0 15px rgba(0,0,0,0.2); margin: 0 auto; width:80%; height:60px; background-color:#B0B0B0">
      <div class="d-flex justify-content-around">
        <h3 class="mt-3">My itienary</h3>
        <button class="mt-3 corner btn btn-light">View</button>
      </div>
    </div>
   </div>
      <%# current_address %>
      <div style="">
        <% if current_user.location.presence == nil %>
          <%= simple_form_for Location.new, data: {turbo: false} do |f|%>
          <%= f.input :address, input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
            <div class="form-actions">
              <%= f.button :submit, "Set address", class:"btn btn-dark" %>
            </div>
          <% end %>
        <% else %>
          <div class="d-flex">
          <h4><i class="fa-solid fa-location-pin"></i></h4>
            <%= current_user.location.address %>
          </div>

          <%= simple_form_for (current_user.location) do |f|%>
            <%= f.input :address, input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
            <%= f.button :submit, "Change address", class:"btn btn-dark" %>
          <% end %>
        <% end %>
      </div>



    <%# category list %>
   <div style="text-align:center; background-size:cover; background-image:url('https://img.freepik.com/free-photo/full-length-portrait-excited-man_171337-2333.jpg?w=1480&t=st=1670527180~exp=1670527780~hmac=3e611183adee5f13ea9058d251f88ddaeff590430b12b5b1c17362ba4a8690dc')">
      <h3 class="mt-5" style="font-weight:bold;">Find your item</h3>
      <div style="margin-top:200px">
        <div style="text-align:center; background-color:black; height: 40px; width:100%;">
          <h3 style="color:white">Categories</h3>
        </div>
        <%= render "shared/slide_home_link_category" %>
      </div>
   </div>
      <%= render "shared/slide_home_link_near_shops" %>
  </div>
</div>
