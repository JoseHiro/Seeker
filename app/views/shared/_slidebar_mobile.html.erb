<div id="menu">
  <div class="slide-avatar-container">
    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, crop: :fill, class:"side-bar-avatar  round" %>
    <% else %>
      <img class="round side-bar-avatar" style=""src="https://pcafalcons.com/wp-content/uploads/2019/08/no-profile-picture-icon-female-0-e1564976045606.jpg" alt="">
    <% end %>
    <br>
    <% if current_user.location.presence %>

    <% end %>
  </div>


  <% if current_user.location.present? %>
    <div class="mt-3 d-flex" style="color:white">
      <i class="fa-solid fa-location-dot"></i>
      <p class="ms-3"><%= current_user.location.address %></p>
    </div>
  <% end %>


  <nav>
    <ul>
      <%= link_to "My itineraries",  my_itinerary_path, class: "slide-bar-links dropdown-item" %>
      <%= link_to "My account", user_path(current_user), class: "slide-bar-links dropdown-item" %>
      <% if current_user.businesses.present? %>
        <%= link_to "My businesses", businesses_path, class:"slide-bar-links dropdown-item" %>
        <%= link_to "New business", new_business_path, class:"slide-bar-links dropdown-item"%>
      <% else %>
        <%= link_to "New business",new_business_path, class:"slide-bar-links dropdown-item"  %>
      <% end %>
      <%= link_to "Edit account", edit_user_registration_path(current_user), class: "slide-bar-links dropdown-item" %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "slide-bar-logout slide-bar-links dropdown-item" %>
    </ul>
  </nav>
</div>
